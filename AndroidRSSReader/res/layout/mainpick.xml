<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="#001111" />

            <Button
                android:id="@+id/Button03"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="26dp" />

            <Button
                android:id="@+id/firstRss"
                android:layout_width="260dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:onClick="Firstrss"
                android:background="@drawable/plainblock" />

            <Button
                android:id="@+id/button5"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="26dp" />

            <Button
                android:id="@+id/secondRss"
                android:layout_width="260dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:onClick="SecondRss"
                android:background="@drawable/plainblock" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/thirdRss"
                android:layout_width="260dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/plainblock" />

            <Button
                android:id="@+id/Button02"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="27dp" />

            <Button
                android:id="@+id/fourthRss"
                android:layout_width="260dp"
                android:layout_height="98dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/plainblock" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>